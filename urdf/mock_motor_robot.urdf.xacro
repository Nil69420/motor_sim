<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mock_motor_robot">
  
  <!-- ====================================================================== -->
  <!-- Parameters -->
  <!-- ====================================================================== -->
  
  <!-- Robot dimensions (example 3-DOF arm) -->
  <xacro:property name="link1_length" value="0.3" />
  <xacro:property name="link2_length" value="0.25" />
  <xacro:property name="link3_length" value="0.15" />
  
  <!-- ====================================================================== -->
  <!-- Materials -->
  <!-- ====================================================================== -->
  
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  
  <!-- ====================================================================== -->
  <!-- Base Link -->
  <!-- ====================================================================== -->
  
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  
  <!-- ====================================================================== -->
  <!-- Link 1 -->
  <!-- ====================================================================== -->
  
  <link name="link1">
    <visual>
      <origin xyz="0 0 ${link1_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="${link1_length}"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 ${link1_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="${link1_length}"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 ${link1_length/2}" rpy="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${-pi}" upper="${pi}" effort="10.0" velocity="3.14"/>
  </joint>
  
  <!-- ====================================================================== -->
  <!-- Link 2 -->
  <!-- ====================================================================== -->
  
  <link name="link2">
    <visual>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="${link2_length}"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="${link2_length}"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 ${link2_length/2}" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.0008" ixy="0.0" ixz="0.0" iyy="0.0008" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>
  
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${link1_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-pi/2}" upper="${pi/2}" effort="5.0" velocity="3.14"/>
  </joint>
  
  <!-- ====================================================================== -->
  <!-- Link 3 (End Effector) -->
  <!-- ====================================================================== -->
  
  <link name="link3">
    <visual>
      <origin xyz="0 0 ${link3_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="${link3_length}"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 ${link3_length/2}" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="${link3_length}"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 ${link3_length/2}" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0005" ixy="0.0" ixz="0.0" iyy="0.0005" iyz="0.0" izz="0.00005"/>
    </inertial>
  </link>
  
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 ${link2_length}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-pi/2}" upper="${pi/2}" effort="3.0" velocity="3.14"/>
  </joint>
  
  <!-- ====================================================================== -->
  <!-- ros2_control Hardware Interface -->
  <!-- ====================================================================== -->
  
  <ros2_control name="MockMotorSystem" type="system">
    
    <!-- Plugin declaration -->
    <hardware>
      <plugin>mock_interface/MockMotorHardwareInterface</plugin>
      
      <!-- Hardware parameters -->
      <param name="simulation_mode">true</param>
      <param name="update_rate">100</param>
    </hardware>
    
    <!-- Joint 1 Configuration -->
    <joint name="joint1">
      <!-- Motor-specific parameters -->
      <param name="motor_id">1</param>
      <param name="position_offset">0.0</param>
      <param name="position_scale">651.89832</param>  <!-- 4096/(2*pi) -->
      <param name="velocity_scale">0.111</param>
      <param name="effort_scale">0.001</param>
      
      <!-- Command interfaces (what controllers can write) -->
      <command_interface name="position">
        <param name="min">${-pi}</param>
        <param name="max">${pi}</param>
      </command_interface>
      <command_interface name="velocity">
        <param name="min">-3.14</param>
        <param name="max">3.14</param>
      </command_interface>
      
      <!-- State interfaces (what controllers can read) -->
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <state_interface name="temperature"/>
    </joint>
    
    <!-- Joint 2 Configuration -->
    <joint name="joint2">
      <param name="motor_id">2</param>
      <param name="position_offset">0.0</param>
      <param name="position_scale">651.89832</param>
      <param name="velocity_scale">0.111</param>
      <param name="effort_scale">0.001</param>
      
      <command_interface name="position">
        <param name="min">${-pi/2}</param>
        <param name="max">${pi/2}</param>
      </command_interface>
      <command_interface name="velocity">
        <param name="min">-3.14</param>
        <param name="max">3.14</param>
      </command_interface>
      
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <state_interface name="temperature"/>
    </joint>
    
    <!-- Joint 3 Configuration -->
    <joint name="joint3">
      <param name="motor_id">3</param>
      <param name="position_offset">0.0</param>
      <param name="position_scale">651.89832</param>
      <param name="velocity_scale">0.111</param>
      <param name="effort_scale">0.001</param>
      
      <command_interface name="position">
        <param name="min">${-pi/2}</param>
        <param name="max">${pi/2}</param>
      </command_interface>
      <command_interface name="velocity">
        <param name="min">-3.14</param>
        <param name="max">3.14</param>
      </command_interface>
      
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
      <state_interface name="temperature"/>
    </joint>
    
  </ros2_control>
  
</robot>
